#!/bin/sh
. "$(dirname "$0")/_/husky.sh"
git diff --cached --name-only --diff-filter=ACMRTUXB >frontend/.husky/staged-files
echo "checking frontend .........."
cd frontend
echo "running prettier ó°Ž™ ..."
FILES=$(cat .husky/staged-files | grep '^frontend/.*\.\(css\|ts\|json\|html\|js\|tsx\)$' | sed 's/^frontend\///')
if [ -z "$FILES" ]; then
  echo "No files to check"
else
  npx prettier -w $FILES
fi
echo "running oxlint ó°Ž™ ..."
npx oxlint --fix $(cat .husky/staged-files | grep '^frontend/.*\.\(css\|ts\|json\|html\|js\|tsx\)$' | sed 's/^frontend\///')
echo "checking backend ..............."
BACKEND_FILES=$(cat .husky/staged-files | grep '^backend/.*\.\(go\)$' | sed 's/^backend\///')
if [ -z "$BACKEND_FILES" ]; then
  echo "All checks passed! ðŸŽ‰"
  exit 0
else
  echo "running golangci-lint î˜§ ......"
  cd ../backend
  golangci-lint run -v
  go mod tidy -v
  echo "running go fmt î˜§ ...."
  go fmt ./...
  # echo "Running Go tests î˜§ .."
  # cd tests
  # go test -v
  # cd ../../
  git add $(cat frontend/.husky/staged-files)
  echo "All checks passed! ðŸŽ‰"
fi
